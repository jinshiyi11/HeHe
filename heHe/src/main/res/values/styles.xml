<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MoreMenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/transparent_black_bg</item>
    </style>
    
    <style name="MediaControlAnimation" parent="android:Animation">         
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>    
        <item name="android:windowExitAnimation">@anim/slide_out_from_bottom</item>    
    </style>  

</resources>
