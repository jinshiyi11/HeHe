<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pulltorefresh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    android:orientation="vertical" >
    
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        layout="@layout/title_bar" />
    
    <!-- 无数据时的显示界面 -->

    <LinearLayout
        android:id="@+id/no_data_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/star_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/no_star_hint"
            android:textColor="@color/text_hint_color"
            android:textSize="22sp" >
        </TextView>
    </LinearLayout>

    <!-- 正在加载界面 -->

    <LinearLayout
        android:id="@+id/loading_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/pb_loading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- 主界面 -->

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/feedlist_bg_color"
            android:listSelector="@color/transparent_color"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="6dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="true"
            android:scrollbars="vertical"
            pulltorefresh:ptrShowIndicator="false"
             />
    </LinearLayout>
    

</LinearLayout>
